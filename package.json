{
  "name": "zopfli-recompressor",
  "version": "1.0.0",
  "description": "A simple script recompressing all zip files recursively in a directory structure using the zopfli algorithm.",
  "main": "src/bin/zopfli-recompress.ts",
  "scripts": {
    "prettier": "eslint --ext js,ts . --fix",
    "lint": "eslint --ext js,ts .",
    "clean": "rimraf 'dist/**/*'",
    "build": "npm-run-all build:linux build:windows build:macos",
    "build:linux": "nexe --i 'src/bin/zopfli-recompress' -o 'dist/bin/zopfli-recompress-linux' -t 'static-x86-12.9.1'",
    "build:windows": "nexe --i 'src/bin/zopfli-recompress' -o 'dist/bin/zopfli-recompress-windows' -t 'windows-x64-12.13.1'",
    "build:macos": "nexe --i 'src/bin/zopfli-recompress' -o 'dist/bin/zopfli-recompress-macos' -t 'mac-x64-12.13.1'"
  },
  "keywords": [
    "zopfli",
    "script",
    "cli",
    "compression",
    "zip",
    "gzip"
  ],
  "author": "Jakob Westhoff <jakob@westhoffswelt.de> (http://westhoffswelt.de)",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^13.9.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.8",
    "nexe": "^3.3.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint"
  }
}
